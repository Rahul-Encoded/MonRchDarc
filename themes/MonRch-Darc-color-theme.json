{
  "name": "MonRch-Darc",
  "type": "dark",

  // =====================
  // EDITOR COLORS & STYLING
  // =====================
  "colors": {
    // Background and text color of the editor
    "editor.background": "#1e1b29CC",      // Dark, semi-transparent royal purple
    "editor.foreground": "#ADEBB3",       // Soft green for readability

    // Text selection and cursor styles
    "editor.selectionBackground": "#8e24aa66", // Light purple with transparency
    "editorCursor.foreground": "#FFD180",      // Golden yellow cursor

    // Line highlighting and borders
    "editor.lineHighlightBackground": "#8e24aa22", // Subtle line highlight
    "editorGroup.border": "#8e24aa",              // Purple border around groups
    "editorGroupHeader.tabsBackground": "#1e1b29CC", // Semi-transparent tab background
    "editorGroupHeader.tabsBorder": "#8e24aa",        // Purple tab border

    // =====================
    // ACTIVITY BAR (LEFT SIDEBAR)
    // =====================
    "activityBar.background": "#8e24aa",      // Bold purple background
    "activityBar.foreground": "#FAFAFA",      // White icons and text
    "activityBarBadge.background": "#C2185BCC", // Vibrant badge (like notification bubble)
    "activityBarBadge.foreground": "#FAFAFA",   // White text inside badge
    "activityBar.border": "#8e24aa",           // Purple border for consistency

    // =====================
    // SIDEBAR (FILE EXPLORER, ETC.)
    // =====================
    "sideBar.background": "#1e1b29CC",   // Matches editor background
    "sideBar.foreground": "#D1C4E9",     // Soft lavender text
    "sideBarTitle.foreground": "#FAFAFA", // White title text
    "sideBar.border": "#8e24aa",         // Purple border

    // =====================
    // TITLE BAR (TOP BAR)
    // =====================
    "titleBar.activeBackground": "#4A148C",    // Deep royal purple
    "titleBar.activeForeground": "#FAFAFA",    // White text for contrast
    "titleBar.inactiveBackground": "#4A148C99", // Slightly faded when not focused
    "titleBar.inactiveForeground": "#FAFAFA99", // White with slight fade
    "titleBar.border": "#8e24aa",              // Purple border

    // =====================
    // STATUS BAR (BOTTOM BAR)
    // =====================
    "statusBar.background": "#8e24aa",    // Consistent purple
    "statusBar.foreground": "#FAFAFA",    // White text/icons
    "statusBar.border": "#4A148C",        // Deep purple border

    // =====================
    // TERMINAL COLORS
    // =====================
    "terminal.foreground": "#ADEBB3",     // Matches editor text
    "terminalCursor.foreground": "#FFD180", // Golden yellow cursor
    "terminal.ansiBlack": "#000000",
    "terminal.ansiRed": "#FF1744",        // Neon red for errors
    "terminal.ansiGreen": "#C3E88D",
    "terminal.ansiYellow": "#FFD180",
    "terminal.ansiBlue": "#80DEEA",
    "terminal.ansiMagenta": "#B388FF",
    "terminal.ansiCyan": "#E040FB",
    "terminal.ansiWhite": "#FFFFFF"
  },

  // =====================
  // SYNTAX HIGHLIGHTING
  // =====================
  "tokenColors": [
    // Comments
    {
      "name": "Comment",
      "scope": ["comment", "punctuation.definition.comment"],
      "settings": {
        "fontStyle": "italic",
        "foreground": "#B0BEC5" // Soft grey-blue
      }
    },
    // Variables
    {
      "name": "Variables",
      "scope": ["variable", "string constant.other.placeholder"],
      "settings": {
        "foreground": "#C3E88D" // Bright green
      }
    },
    // Errors and Invalid Code
    {
      "name": "Invalid",
      "scope": ["invalid", "invalid.illegal"],
      "settings": {
        "foreground": "#FF1744" // Neon red
      }
    },
    // Keywords (like if, else, return)
    {
      "name": "Keyword, Storage",
      "scope": ["keyword", "storage.type", "storage.modifier"],
      "settings": {
        "foreground": "#B388FF" // Soft purple
      }
    },
    // Operators (+, -, *, etc.) and punctuation
    {
      "name": "Operator, Misc",
      "scope": ["keyword.control", "constant.other.color", "punctuation", "meta.tag"],
      "settings": {
        "foreground": "#80DEEA" // Cool blue
      }
    },
    // Functions and method calls
    {
      "name": "Function, Special Method",
      "scope": ["entity.name.function", "meta.function-call"],
      "settings": {
        "foreground": "#FFAB91" // Peach orange
      }
    },
    // Strings and text literals
    {
      "name": "String, Symbols, Inherited Class, Markup Heading",
      "scope": ["string", "constant.other.symbol", "markup.heading"],
      "settings": {
        "foreground": "#FFD180" // Golden yellow
      }
    },
    // Classes and support structures
    {
      "name": "Class, Support",
      "scope": ["entity.name", "support.class"],
      "settings": {
        "foreground": "#FF8A80" // Soft red-pink
      }
    },
    // Attributes (like HTML/JSX/TSX props)
    {
      "name": "Attributes",
      "scope": ["entity.other.attribute-name"],
      "settings": {
        "foreground": "#FFAB91" // Same peach orange as functions
      }
    },
    // CSS IDs and special selectors
    {
      "name": "CSS ID's",
      "scope": ["source.sass keyword.control"],
      "settings": {
        "foreground": "#E040FB" // Vibrant pink
      }
    }
  ]
}
